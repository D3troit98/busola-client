<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.client.AdminLoginController">
    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Admin Login" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <VBox spacing="5">
                <Label text="Username" />
                <TextField fx:id="adminUsernameField" promptText="Enter your username" />
            </VBox>
            <VBox spacing="5">
                <Label text="Password" />
                <PasswordField fx:id="adminPasswordField" promptText="Enter your password" />
            </VBox>
            <Button onAction="#adminLogin" text="Login" fx:id="adminLoginButton" />
             <Hyperlink text="Login as a regular member? Login here" onAction="#goToLogin" />
        </VBox>
    </center>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</BorderPane>
